#!/bin/bash

# Task 0: API Request Automation
# Fetch Pikachu data from the Pokémon API

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
echo "Fetching Pikachu data from API..."

if curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" | grep -q "200"; then
    echo "✅ Data successfully saved to $OUTPUT_FILE"
else
    echo "❌ Error: Failed to fetch data from API" | tee -a "$ERROR_FILE"
    echo "$(date): Failed to fetch Pikachu data from $API_URL" >> "$ERROR_FILE"
    exit 1
fi